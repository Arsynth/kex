    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'kex'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=kex"
                ],
                "filter": {
                    "name": "kex",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'kex'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=kex",
                    "--package=kex"
                ],
                "filter": {
                    "name": "kex",
                    "kind": "bin"
                }
            },
            // "args": ["/bin/cat", "-s", "138208", "-a", "d"],
            "args": ["/bin/cat", "-n", "10"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'kex'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=kex",
                    "--package=kex"
                ],
                "filter": {
                    "name": "kex",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}